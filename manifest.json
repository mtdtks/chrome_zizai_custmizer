{
    // 拡張機能の定義
    "manifest_version": 2,  // マニフェストのバージョン ※"2"を指定
    "name": "zizai_customizer",       // 拡張機能の名称
    "version": "0.0.0.1",       // 拡張機能のバージョン
    //メジャー・バージョンアップ.機能追加.バグフィックス

    "description": "for zizai worker.",  // 拡張機能の概要
 
    // アイコンの設定
    "icons": {
        //"16": "icons/icon.png",         // 16×16[px]アイコンファイルのパス
        //"48": "icons/icon.png",         // 48×48[px]アイコンファイルのパス
        //"128": "icons/icon.png"         // 128×128[px]アイコンファイルのパス
    },
 
    // スクリプトの設定
    "content_scripts": [
        {
            "matches": ["https://www.kosho.or.jp/*koshoadmin*"],
            // 拡張機能を適用するURLパターン
            "js": ["main.js"]                       // JavaScriptのパス
        }
    ]
}
